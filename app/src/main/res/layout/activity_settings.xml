<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0300DDFF"
    tools:context=".SettingsActivity">

    <!--to include AppBar layout-->
    <include
        android:id="@+id/app_bar_settings"
        layout="@layout/app_bar_layout"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/app_bar_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/profile_image_change_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Change Profile"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:textStyle="bold"

        />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_below="@+id/profile_image_change_btn"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/name" />

    <EditText
        android:id="@+id/settings_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_change_btn"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:hint=" Full Name" />
    <ImageView
        android:layout_width="25dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_fullname"
        android:src="@drawable/phone" />

    <EditText
        android:id="@+id/settings_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_fullname"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="31dp"
        android:hint="Phone" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="28dp"
        android:layout_below="@+id/settings_phone"
        android:layout_marginTop="29dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/address" />

    <EditText
        android:id="@+id/settings_Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_phone"
        android:layout_marginTop="17dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="31dp"
        android:hint=" Address" />

    <Button
        android:id="@+id/update_account_settings"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/settings_Address"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="40dp"
        android:background="@drawable/settings_button"

        android:text="Update"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>